<base:MenuBottomViewBase
    x:Class="diexpenses.Views.MovementDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding MovementDetailsPageVM, Source={StaticResource Locator}}"
    xmlns:local="using:diexpenses.Views"
    xmlns:base="using:diexpenses.Views.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock Text="Movement Details" Grid.Row="0" FontWeight="Bold" Foreground="DarkSlateBlue" FontSize="30" HorizontalAlignment="Center" Margin="20,15,20,10" />

        <StackPanel Grid.Row="1" Margin="20,15,20,0" >

            <!--Expense/Concept/Amount-->
            <TextBlock Foreground="Black" FontSize="30" HorizontalAlignment="Stretch" Margin="0,0,0,10" >
                <Run Text="{Binding Expense, Mode=OneTime}" />
                <Run Text="{Binding Concept, Mode=OneTime}" />
                <Run Text="{Binding Amount, Mode=OneTime}" />
            </TextBlock>

            <!--Kind/Subkind-->
            <TextBlock Foreground="Black" FontSize="30" HorizontalAlignment="Stretch" Margin="0,0,0,10" >
                <Run Text="{Binding Kind, Mode=OneTime}" />
                <Run Text="{Binding Subkind, Mode=OneTime}" />
            </TextBlock>

            <!--BankAccount/Amount-->
            <TextBlock Foreground="Black" FontSize="30" HorizontalAlignment="Stretch" Margin="0,0,0,10" >
                <Run Text="{Binding Description, Mode=OneTime}" />
                <Run Text="{Binding Balance, Mode=OneTime}" />
            </TextBlock>

            <!--CompleteBankAccount-->
            <TextBlock Foreground="Black" Text="{Binding CompleteBankAccount, Mode=OneTime}" FontSize="30" HorizontalAlignment="Stretch" Margin="0,0,0,10" />

            <!--Start-Map:ExpensePosition-->
            
            <!--End-Map:ExpensePosition-->
            
        </StackPanel>

    </Grid>

</base:MenuBottomViewBase>
